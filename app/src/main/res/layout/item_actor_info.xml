<?xml version="1.0" encoding="utf-8"?>
<layout >

    <data>

        <variable
            name="viewModel"
            type="com.example.moviedb_37.screen.actors.ItemActorsViewModel" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_8">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_background">

            <ImageView
                android:id="@+id/image_genres"
                android:layout_width="@dimen/dp_125"
                android:layout_height="@dimen/dp_125"
                android:padding="@dimen/dp_16"
                android:src="@drawable/ic_play_circle"
                app:bindImage="@{viewModel.actorObservable.profilePath}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:text="@{viewModel.actorObservable.name}"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/image_genres"
                app:layout_constraintStart_toStartOf="@id/image_genres"
                app:layout_constraintTop_toBottomOf="@id/image_genres" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>
